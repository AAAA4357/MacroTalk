<Page x:Class="MacroTalk.SettingPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MacroTalk"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SettingPage">
    <Grid>
        <Border Background="#F0F0F0">
            <ScrollViewer>
                <StackPanel>
                    <Border Background="White" Height="240" CornerRadius="16" Margin="8">
                        <StackPanel>
                            <TextBlock Text="外观设置" FontSize="20" Margin="16,16,16,8"/>
                            <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="8" Height="80" Margin="16,0,16,6">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="主题" FontSize="15.151" VerticalAlignment="Bottom" Margin="8,0,0,4"/>
                                    <TextBlock Text="选择应用程序的主体" VerticalAlignment="Top" Grid.Row="1" Margin="8,4,0,0"/>
                                    <ComboBox Grid.RowSpan="2" Width="150" Height="40" FontSize="18" SelectedIndex="0" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,20,0">
                                        <ComboBoxItem>跟随系统</ComboBoxItem>
                                        <ComboBoxItem>浅色</ComboBoxItem>
                                        <ComboBoxItem>深色</ComboBoxItem>
                                    </ComboBox>
                                </Grid>
                            </Border>
                            <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="8" Height="80" Margin="16,6">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="配色" FontSize="15.151" VerticalAlignment="Bottom" Margin="8,0,0,4"/>
                                    <TextBlock Text="更改应用程序配色" VerticalAlignment="Top" Grid.Row="1" Margin="8,4,0,0"/>
                                    
                                </Grid>
                            </Border>
                        </StackPanel>
                    </Border>
                    <Border Background="White" Height="240" CornerRadius="16" Margin="8">
                        <StackPanel>
                            <TextBlock Text="软件设置" FontSize="20" Margin="16,16,16,8"/>
                            <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="8" Height="80" Margin="16,0,16,6">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="自动保存" FontSize="15.151" VerticalAlignment="Bottom" Margin="8,0,0,4"/>
                                    <TextBlock Text="选择自动保存时长" VerticalAlignment="Top" Grid.Row="1" Margin="8,4,0,0"/>
                                    <ComboBox Grid.RowSpan="2" Width="150" Height="40" FontSize="18" SelectedIndex="0" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,20,0">
                                        <ComboBoxItem>禁用</ComboBoxItem>
                                        <ComboBoxItem>1分钟</ComboBoxItem>
                                        <ComboBoxItem>5分钟</ComboBoxItem>
                                        <ComboBoxItem>10分钟</ComboBoxItem>
                                        <ComboBoxItem>15分钟</ComboBoxItem>
                                        <ComboBoxItem>30分钟</ComboBoxItem>
                                        <ComboBoxItem>60分钟</ComboBoxItem>
                                    </ComboBox>
                                </Grid>
                            </Border>
                            <Border BorderBrush="Gray" BorderThickness="1" CornerRadius="8" Height="80" Margin="16,6">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <TextBlock Text="配色" FontSize="15.151" VerticalAlignment="Bottom" Margin="8,0,0,4"/>
                                    <TextBlock Text="更改应用程序配色" VerticalAlignment="Top" Grid.Row="1" Margin="8,4,0,0"/>

                                </Grid>
                            </Border>
                        </StackPanel>
                    </Border>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</Page>
