<Page xmlns:hc="https://handyorg.github.io/handycontrol"  x:Class="MacroTalk.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MacroTalk" 
      mc:Ignorable="d" 
      xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
      Title="MainPage" 
      d:DataContext="{d:DesignInstance Type=local:MainPageViewModel}"
      d:Width="900" d:Height="700">
    <Page.Resources>
        <local:DateTimePreviewConverter x:Key="DateTime2PreviewConverter"/>
    </Page.Resources>
    <Grid Background="#F0F0F0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="2*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="160"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <hc:Carousel HorizontalAlignment="Center" Grid.ColumnSpan="2" Margin="4" AutoRun="True" Interval="0:0:5" SizeChanged="Carousel_SizeChanged">
            <Border Width="{Binding ActualWidth, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type hc:Carousel}}}" BorderThickness="2" CornerRadius="3">
                <Border.Background>
                    <LinearGradientBrush EndPoint="1,1" StartPoint="0,0">
                        <GradientStop Color="#FFFFC1D6"/>
                        <GradientStop Color="#FFBADDFF" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.BorderBrush>
                    <LinearGradientBrush EndPoint="1,1" StartPoint="0,0">
                        <GradientStop Color="#FFEEB6C9"/>
                        <GradientStop Color="#FFA3C3E2" Offset="1"/>
                    </LinearGradientBrush>
                </Border.BorderBrush>
                <Grid>
                    <TextBlock Text="欢迎使用Macro Talk" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="White" FontSize="22" Margin="28"/>
                    <TextBlock Text="一款致力于用户体验的对话编辑器" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="White" FontSize="14" Margin="28,64,0,0"/>
                </Grid>
            </Border>
            <Border Width="{Binding ActualWidth, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type hc:Carousel}}}" BorderThickness="2" CornerRadius="3">
                <Border.Background>
                    <LinearGradientBrush EndPoint="1,1" StartPoint="0,0">
                        <GradientStop Color="#FFFFC1D6"/>
                        <GradientStop Color="#FFC8E4FF" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.BorderBrush>
                    <LinearGradientBrush EndPoint="1,1" StartPoint="0,0">
                        <GradientStop Color="#FFE384A4"/>
                        <GradientStop Color="#FF4B8BC8" Offset="1"/>
                    </LinearGradientBrush>
                </Border.BorderBrush>
                <Grid>
                    <TextBlock Text="Macro Talk 6.0更新" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="White" FontSize="22" Margin="28"/>
                    <TextBlock Text="从UI、编辑到导出的全方位更新" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="White" FontSize="14" Margin="28,64,0,0"/>
                </Grid>
            </Border>
            <Border Width="{Binding ActualWidth, RelativeSource={RelativeSource Mode=FindAncestor, AncestorType={x:Type hc:Carousel}}}" BorderThickness="2" CornerRadius="3">
                <Border.Background>
                    <LinearGradientBrush EndPoint="1,1" StartPoint="0,0">
                        <GradientStop Color="#FFFFC1D6"/>
                        <GradientStop Color="#FFBADDFF" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <Border.BorderBrush>
                    <LinearGradientBrush EndPoint="1,1" StartPoint="0,0">
                        <GradientStop Color="#FFEEB6C9"/>
                        <GradientStop Color="#FFA3C3E2" Offset="1"/>
                    </LinearGradientBrush>
                </Border.BorderBrush>
                <Grid>
                    <TextBlock Text="欢迎来到Macro Talk" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="White" FontSize="22" Margin="28"/>
                    <TextBlock Text="今天，您更新了吗？" HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="White" FontSize="14" Margin="28,64,0,0"/>
                </Grid>
            </Border>
        </hc:Carousel>
        <TextBlock Text="快速操作" FontSize="26" Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="16"/>
        <Grid Grid.Row="1" Margin="12,50,12,12">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Grid.Resources>
                <Style TargetType="{x:Type Button}">
                    <Setter Property="RenderTransform">
                        <Setter.Value>
                            <TranslateTransform Y="2"/>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="{x:Type Button}">
                                <Border>
                                    <ContentPresenter Content="{TemplateBinding Content}"/>
                                </Border>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Style.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="(Button.RenderTransform).(TranslateTransform.Y)" To="0" Duration="0:0:0.2">
                                            <DoubleAnimation.EasingFunction>
                                                <QuadraticEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="(Button.RenderTransform).(TranslateTransform.Y)" To="2" Duration="0:0:0.2">
                                            <DoubleAnimation.EasingFunction>
                                                <QuadraticEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                        <Trigger Property="IsPressed" Value="True">
                            <Trigger.EnterActions>
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="(Button.RenderTransform).(TranslateTransform.Y)" To="4" Duration="0:0:0.2">
                                            <DoubleAnimation.EasingFunction>
                                                <QuadraticEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.EnterActions>
                            <Trigger.ExitActions>
                                <BeginStoryboard>
                                    <Storyboard FillBehavior="Stop">
                                        <DoubleAnimation Storyboard.TargetProperty="(Button.RenderTransform).(TranslateTransform.Y)" To="0" Duration="0:0:0.2">
                                            <DoubleAnimation.EasingFunction>
                                                <QuadraticEase EasingMode="EaseOut"/>
                                            </DoubleAnimation.EasingFunction>
                                        </DoubleAnimation>
                                    </Storyboard>
                                </BeginStoryboard>
                            </Trigger.ExitActions>
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </Grid.Resources>
            <Button Command="{Binding NewConversationClickCommand}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="4">
                <Border Background="White" CornerRadius="8">
                    <Grid>
                        <Border Background="#F0F0F0" CornerRadius="14" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="8">
                            <iconPacks:PackIconMaterial Kind="FilePlusOutline" Margin="8" Width="12" Height="12"/>
                        </Border>
                        <TextBlock Text="快速开始" FontSize="15.151" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="44,12,0,0"/>
                        <TextBlock Text="直接开始新聊天项目" Foreground="Gray" FontSize="11.364" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="8,44,0,0"/>
                    </Grid>
                </Border>
            </Button>
            <Button Grid.Column="1" Command="{Binding EditProfileClickCommand}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="4">
                <Border Background="White" CornerRadius="8">
                    <Grid>
                        <Border Background="#F0F0F0" CornerRadius="14" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="8">
                            <iconPacks:PackIconMaterial Kind="AccountEditOutline" Margin="8" Width="12" Height="12"/>
                        </Border>
                        <TextBlock Text="管理角色" FontSize="15.151" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="44,12,0,0"/>
                        <TextBlock Text="添加或修改聊天角色" Foreground="Gray" FontSize="11.364" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="8,44,0,0"/>
                    </Grid>
                </Border>
            </Button>
            <Button Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="4">
                <Border Background="White" CornerRadius="8">
                    <Grid>
                        <Border Background="#F0F0F0" CornerRadius="14" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="8">
                            <iconPacks:PackIconMaterial Kind="TooltipEditOutline" Margin="8" Width="12" Height="12"/>
                        </Border>
                        <TextBlock Text="恢复编辑" FontSize="15.151" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="44,12,0,0"/>
                        <TextBlock Text="继最近打开的聊天项目继续创作" Foreground="Gray" FontSize="11.364" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="8,44,0,0"/>
                    </Grid>
                </Border>
            </Button>
            <Button Grid.Column="1" Grid.Row="1" Command="{Binding SettingClickCommand}" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="4">
                <Border Background="White" CornerRadius="8">
                    <Grid>
                        <Border Background="#F0F0F0" CornerRadius="14" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="8">
                            <iconPacks:PackIconMaterial Kind="CogOutline" Margin="8" Width="12" Height="12"/>
                        </Border>
                        <TextBlock Text="应用设置" FontSize="15.151" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="44,12,0,0"/>
                        <TextBlock Text="配置应用选项" Foreground="Gray" FontSize="11.364" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="8,44,0,0"/>
                    </Grid>
                </Border>
            </Button>
        </Grid>
        <TextBlock Text="最新动态" FontSize="26" Grid.Row="1" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="16"/>
        <Grid Grid.Column="1" Grid.Row="1" Margin="16,54,16,16">
            <Border Background="White" CornerRadius="8">
                <Border.RenderTransform>
                    <TranslateTransform Y="2"/>
                </Border.RenderTransform>
                <Border.Triggers>
                    <EventTrigger RoutedEvent="MouseEnter">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(TranslateTransform.Y)" To="0" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="MouseLeave">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(TranslateTransform.Y)" To="2" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Border.Triggers>
                <StackPanel Margin="8,4">
                    <TextBlock Text="全新版本更新v6.0" FontSize="20" Margin="0,4"/>
                    <StackPanel Orientation="Horizontal" Margin="4">
                        <iconPacks:PackIconCodicons Kind="Sparkle" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBlock Text="UI全重制" FontSize="15" Margin="4,2"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="4">
                        <iconPacks:PackIconCodicons Kind="Sparkle" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBlock Text="新增快捷编辑方式" FontSize="15" Margin="4,2"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="4">
                        <iconPacks:PackIconCodicons Kind="Sparkle" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBlock Text="加强图片/视频导出功能" FontSize="15" Margin="4,2"/>
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="4">
                        <iconPacks:PackIconCodicons Kind="Sparkle" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        <TextBlock Text="协同创作" FontSize="15" Margin="4,2"/>
                    </StackPanel>
                </StackPanel>
            </Border>
        </Grid>
        <TextBlock Text="最近项目" FontSize="26" Grid.Row="2" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="16"/>
        <ListBox Grid.Row="2" ItemsSource="{Binding ConversationPreviewList}" SelectedIndex="{Binding SelectedPreviewIndex}" Margin="16,54,16,16" Padding="0" Background="#F0F0F0" BorderBrush="{DynamicResource SecondaryBorderBrush}">
            <ListBox.ItemContainerStyle>
                <Style TargetType="{x:Type ListBoxItem}" BasedOn="{StaticResource ListBoxItemBaseStyle}">
                    <Setter Property="Padding" Value="0"/>
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Height="88" Width="{Binding ActualWidth, Mode=OneWay, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListBoxItem}}}">
                        <Border Background="White" CornerRadius="8" Margin="4">
                            <Border.Style>
                                <Style TargetType="{x:Type Border}">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Trigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(TranslateTransform.Y)" To="0" Duration="0:0:0.2">
                                                            <DoubleAnimation.EasingFunction>
                                                                <QuadraticEase EasingMode="EaseOut"/>
                                                            </DoubleAnimation.EasingFunction>
                                                        </DoubleAnimation>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </Trigger.EnterActions>
                                            <Trigger.ExitActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(TranslateTransform.Y)" To="2" Duration="0:0:0.2">
                                                            <DoubleAnimation.EasingFunction>
                                                                <QuadraticEase EasingMode="EaseOut"/>
                                                            </DoubleAnimation.EasingFunction>
                                                        </DoubleAnimation>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </Trigger.ExitActions>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <Border.RenderTransform>
                                <TranslateTransform Y="2"/>
                            </Border.RenderTransform>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="100"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Border Background="#F0F0F0" Margin="16" CornerRadius="42" Grid.RowSpan="2">
                                    <Image Source="/Resources/Logo.png"/>
                                </Border>
                                <TextBlock Grid.Column="1" FontSize="15.151" HorizontalAlignment="Left" VerticalAlignment="Bottom" Text="Blue Archive Momotalk项目" Margin="0,3"/>
                                <TextBlock Foreground="Gray" Grid.Column="1" Grid.Row="1" FontSize="15.151" HorizontalAlignment="Left" VerticalAlignment="Top" Text="修改于 刚刚 4条消息" Margin="0,3"/>
                                <TextBlock Grid.Column="2" Grid.RowSpan="2" Text="打开" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16"/>
                            </Grid>
                        </Border>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <TextBlock Text="统计信息" FontSize="26" Grid.Row="2" Grid.Column="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="16"/>
        <Grid Grid.Column="1" Grid.Row="2" Margin="16,54,16,16">
            <Border Background="White" CornerRadius="8">
                <Border.RenderTransform>
                    <TranslateTransform Y="2"/>
                </Border.RenderTransform>
                <Border.Triggers>
                    <EventTrigger RoutedEvent="MouseEnter">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(TranslateTransform.Y)" To="0" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                    <EventTrigger RoutedEvent="MouseLeave">
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(TranslateTransform.Y)" To="2" Duration="0:0:0.2"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </EventTrigger>
                </Border.Triggers>
                <StackPanel Margin="16,12">
                    <TextBlock Text="创建项目总数：5" FontSize="16" Margin="0,4"/>
                    <TextBlock Text="自创角色总数：5" FontSize="16" Margin="0,4"/>
                    <TextBlock Text="发送对话总数：5" FontSize="16" Margin="0,4"/>
                    <TextBlock Text="协同创作总数：5" FontSize="16" Margin="0,4"/>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Page>
