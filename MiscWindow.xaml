<Window xmlns:hc="https://handyorg.github.io/handycontrol"  x:Class="MacroTalk.MiscWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MacroTalk"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=local:MiscWindow}"
        ResizeMode="NoResize"
        WindowStyle="ToolWindow">
    <Grid Height="366" Width="240">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="1"/>
            <RowDefinition Height="7*"/>
            <RowDefinition Height="1"/>
            <RowDefinition Height="44"/>
        </Grid.RowDefinitions>
        <Border>
            <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Margin="8" Text="{Binding WindowTitle}" FontSize="18.183"/>
        </Border>
        <Border Grid.Row="1" Background="{DynamicResource PrimaryBrush}"/>
        <hc:PropertyGrid Grid.Row="2" SelectedObject="{Binding SerializableObject}" ShowSortButton="False"/>
        <Border Grid.Row="3" Background="{DynamicResource PrimaryBrush}"/>
        <Grid Grid.Row="4">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Content="取消" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="8,8,5,8" Style="{StaticResource ButtonDashedWarning}" Click="CancelButton_Click"/>
            <Button Content="确定" Grid.Column="2" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="5,8,8,8" Style="{StaticResource ButtonDashedInfo}" Click="ConfirmButton_Click"/>
        </Grid>
    </Grid>
</Window>
