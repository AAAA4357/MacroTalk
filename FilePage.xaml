<Page x:Class="MacroTalk.FilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MacroTalk" 
      xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
      mc:Ignorable="d" 
      Title="FilePage"
      d:Width="750" d:Height="410">
    <Grid Background="#F0F0F0">
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <ListBox ItemsSource="{Binding ConversationPreviewList}" SelectedIndex="{Binding SelectedPreviewIndex}" Margin="16,16,16,16" Padding="0" Background="#F0F0F0" BorderBrush="{DynamicResource SecondaryBorderBrush}">
            <ListBox.ItemContainerStyle>
                <Style TargetType="{x:Type ListBoxItem}" BasedOn="{StaticResource ListBoxItemBaseStyle}">
                    <Setter Property="Padding" Value="0"/>
                </Style>
            </ListBox.ItemContainerStyle>
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <Border Height="88" Width="{Binding ActualWidth, Mode=OneWay, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type ListBoxItem}}}">
                        <Border Background="White" CornerRadius="8" Margin="4">
                            <Border.Style>
                                <Style TargetType="{x:Type Border}">
                                    <Style.Triggers>
                                        <Trigger Property="IsMouseOver" Value="True">
                                            <Trigger.EnterActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(TranslateTransform.Y)" To="0" Duration="0:0:0.2">
                                                            <DoubleAnimation.EasingFunction>
                                                                <QuadraticEase EasingMode="EaseOut"/>
                                                            </DoubleAnimation.EasingFunction>
                                                        </DoubleAnimation>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </Trigger.EnterActions>
                                            <Trigger.ExitActions>
                                                <BeginStoryboard>
                                                    <Storyboard>
                                                        <DoubleAnimation Storyboard.TargetProperty="(Border.RenderTransform).(TranslateTransform.Y)" To="2" Duration="0:0:0.2">
                                                            <DoubleAnimation.EasingFunction>
                                                                <QuadraticEase EasingMode="EaseOut"/>
                                                            </DoubleAnimation.EasingFunction>
                                                        </DoubleAnimation>
                                                    </Storyboard>
                                                </BeginStoryboard>
                                            </Trigger.ExitActions>
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </Border.Style>
                            <Border.RenderTransform>
                                <TranslateTransform Y="2"/>
                            </Border.RenderTransform>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="80"/>
                                    <ColumnDefinition/>
                                    <ColumnDefinition Width="100"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Border Background="#F0F0F0" Margin="16" CornerRadius="42" Grid.RowSpan="2">
                                    <Image Source="/Resources/Logo.png"/>
                                </Border>
                                <TextBlock Grid.Column="1" FontSize="15.151" HorizontalAlignment="Left" VerticalAlignment="Bottom" Text="Blue Archive Momotalk项目" Margin="0,3"/>
                                <TextBlock Foreground="Gray" Grid.Column="1" Grid.Row="1" FontSize="15.151" HorizontalAlignment="Left" VerticalAlignment="Top" Text="修改于 刚刚 4条消息" Margin="0,3"/>
                                <TextBlock Grid.Column="2" Grid.RowSpan="2" Text="打开" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="16"/>
                            </Grid>
                        </Border>
                    </Border>
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <StackPanel Grid.Row="1" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="16,0,0,0" Orientation="Horizontal">
            <Button Padding="6,0,6,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <iconPacks:PackIconMaterial Kind="FolderPlus"/>
                    <TextBlock Text="新建项目" Grid.Column="1" Margin="4,0,0,0"/>
                </Grid>
            </Button>
            <Control Width="8"/>
            <Button Padding="6,0,6,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <iconPacks:PackIconMaterial Kind="FolderOpen"/>
                    <TextBlock Text="打开项目" Grid.Column="1" Margin="4,0,0,0"/>
                </Grid>
            </Button>
        </StackPanel>
    </Grid>
</Page>
