<Window x:Class="MacroTalk.RichTextBoxEditWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MacroTalk"
        xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks" 
        xmlns:hc="https://handyorg.github.io/handycontrol"
        mc:Ignorable="d"
        Title="Macro Talk - 富文本编辑器"
        Width="800" Height="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1"/>
            <RowDefinition/>
            <RowDefinition Height="44"/>
        </Grid.RowDefinitions>
        <WrapPanel>
            <hc:ButtonGroup Margin="8">
                <Button>
                    <iconPacks:PackIconMaterial Kind="FormatBold"/>
                </Button>
                <Button>
                    <iconPacks:PackIconMaterial Kind="FormatItalic"/>
                </Button>
                <Button>
                    <iconPacks:PackIconMaterial Kind="FormatOverline"/>
                </Button>
                <Button>
                    <iconPacks:PackIconMaterial Kind="FormatStrikethroughVariant">
                        <iconPacks:PackIconMaterial.RenderTransform>
                            <ScaleTransform ScaleX="1.2" ScaleY="1.2" CenterX="8" CenterY="8"/>
                        </iconPacks:PackIconMaterial.RenderTransform>
                    </iconPacks:PackIconMaterial>
                </Button>
                <Button>
                    <iconPacks:PackIconMaterial Kind="FormatUnderline"/>
                </Button>
                <Button>
                    <iconPacks:PackIconMaterial Kind="FormatUnderlineWavy"/>
                </Button>
                <Button>
                    <iconPacks:PackIconMaterial Kind="FormatClear"/>
                </Button>
            </hc:ButtonGroup>
            <hc:Divider Orientation="Vertical" Margin="0,8"/>
            <hc:ButtonGroup Margin="8">
                <Button>
                    <iconPacks:PackIconMaterial Kind="FormatSuperscript"/>
                </Button>
                <Button>
                    <iconPacks:PackIconMaterial Kind="FormatSubscript"/>
                </Button>
                <Button>
                    <iconPacks:PackIconMaterial Kind="FormatClear"/>
                </Button>
            </hc:ButtonGroup>
            <hc:Divider Orientation="Vertical" Margin="0,8"/>
            <StackPanel Orientation="Horizontal" Margin="8">
                <iconPacks:PackIconMaterial Kind="FormatColorText" VerticalAlignment="Center" Margin="6"/>
                <hc:ButtonGroup>
                    <Button>
                        <iconPacks:PackIconMaterial Kind="PaletteAdvanced"/>
                    </Button>
                    <Button>
                        <iconPacks:PackIconMaterial Kind="FormatColorFill"/>
                    </Button>
                    <Button>
                        <iconPacks:PackIconMaterial Kind="FormatColorHighlight"/>
                    </Button>
                    <Button>
                        <iconPacks:PackIconMaterial Kind="FormatColorMarkerCancel"/>
                    </Button>
                    <Button>
                        <iconPacks:PackIconMaterial Kind="FormatClear"/>
                    </Button>
                </hc:ButtonGroup>
            </StackPanel>
            <hc:Divider Orientation="Vertical" Margin="0,8"/>
            <StackPanel Orientation="Horizontal" Margin="8">
                <iconPacks:PackIconMaterial Kind="FormatSize" VerticalAlignment="Center" Margin="6"/>
                <hc:NumericUpDown Width="60"/>
                <hc:ButtonGroup>
                    <Button>
                        <iconPacks:PackIconMaterial Kind="FormatAnnotationPlus"/>
                    </Button>
                    <Button>
                        <iconPacks:PackIconMaterial Kind="FormatAnnotationMinus" RenderTransformOrigin="0.5,0.5">
                            <iconPacks:PackIconMaterial.RenderTransform>
                                <TranslateTransform Y="1"/>
                            </iconPacks:PackIconMaterial.RenderTransform>
                        </iconPacks:PackIconMaterial>
                    </Button>
                    <Button>
                        <iconPacks:PackIconMaterial Kind="FormatText">
                            <iconPacks:PackIconMaterial.RenderTransform>
                                <ScaleTransform ScaleX="0.9" ScaleY="0.9" CenterX="8" CenterY="8"/>
                            </iconPacks:PackIconMaterial.RenderTransform>
                        </iconPacks:PackIconMaterial>
                    </Button>
                    <Button>
                        <iconPacks:PackIconMaterial Kind="FormatClear"/>
                    </Button>
                </hc:ButtonGroup>
            </StackPanel>
            <hc:Divider Orientation="Vertical" Margin="0,8"/>
            <StackPanel Orientation="Horizontal" Margin="8">
                <iconPacks:PackIconMaterial Kind="FormatTextRotationNone" VerticalAlignment="Center" Margin="6" RenderTransformOrigin="0.5,0.5">
                    <iconPacks:PackIconMaterial.RenderTransform>
                        <ScaleTransform ScaleX="1.1" ScaleY="1.1" CenterX="8" CenterY="8"/>
                    </iconPacks:PackIconMaterial.RenderTransform>
                </iconPacks:PackIconMaterial>
                <hc:NumericUpDown Width="60"/>
                <hc:ButtonGroup>
                    <Button>
                        <iconPacks:PackIconMaterial Kind="FormatTextRotationAngleUp"/>
                    </Button>
                    <Button>
                        <iconPacks:PackIconMaterial Kind="FormatTextRotationAngleDown"/>
                    </Button>
                    <Button>
                        <iconPacks:PackIconMaterial Kind="FormatText">
                            <iconPacks:PackIconMaterial.RenderTransform>
                                <ScaleTransform ScaleX="0.9" ScaleY="0.9" CenterX="8" CenterY="8"/>
                            </iconPacks:PackIconMaterial.RenderTransform>
                        </iconPacks:PackIconMaterial>
                    </Button>
                    <Button>
                        <iconPacks:PackIconMaterial Kind="FormatClear"/>
                    </Button>
                </hc:ButtonGroup>
            </StackPanel>
            <hc:Divider Orientation="Vertical" Margin="0,8"/>
            <StackPanel Orientation="Horizontal" Margin="8">
                <iconPacks:PackIconMaterial Kind="FormatLetterSpacing" VerticalAlignment="Center" Margin="6"/>
                <hc:NumericUpDown Width="60"/>
                <hc:ButtonGroup>
                    <Button>
                        <iconPacks:PackIconMaterial Kind="UnfoldMoreVertical"/>
                    </Button>
                    <Button>
                        <iconPacks:PackIconMaterial Kind="UnfoldLessVertical"/>
                    </Button>
                    <Button>
                        <iconPacks:PackIconMaterial Kind="FormatText">
                            <iconPacks:PackIconMaterial.RenderTransform>
                                <ScaleTransform ScaleX="0.9" ScaleY="0.9" CenterX="8" CenterY="8"/>
                            </iconPacks:PackIconMaterial.RenderTransform>
                        </iconPacks:PackIconMaterial>
                    </Button>
                    <Button>
                        <iconPacks:PackIconMaterial Kind="FormatClear"/>
                    </Button>
                </hc:ButtonGroup>
            </StackPanel>
            <hc:Divider Orientation="Vertical" Margin="0,8"/>
            <StackPanel Orientation="Horizontal" Margin="8">
                <iconPacks:PackIconMaterial Kind="FormatLineSpacing" VerticalAlignment="Center" Margin="6"/>
                <hc:NumericUpDown Width="60"/>
                <hc:ButtonGroup>
                    <Button>
                        <iconPacks:PackIconMaterial Kind="UnfoldMoreHorizontal"/>
                    </Button>
                    <Button>
                        <iconPacks:PackIconMaterial Kind="UnfoldLessHorizontal"/>
                    </Button>
                    <Button>
                        <iconPacks:PackIconMaterial Kind="FormatText">
                            <iconPacks:PackIconMaterial.RenderTransform>
                                <ScaleTransform ScaleX="0.9" ScaleY="0.9" CenterX="8" CenterY="8"/>
                            </iconPacks:PackIconMaterial.RenderTransform>
                        </iconPacks:PackIconMaterial>
                    </Button>
                    <Button>
                        <iconPacks:PackIconMaterial Kind="FormatClear"/>
                    </Button>
                </hc:ButtonGroup>
            </StackPanel>
            <hc:Divider Orientation="Vertical" Margin="0,8"/>
            <StackPanel Orientation="Horizontal" Margin="8">
                <iconPacks:PackIconMaterial Kind="FormatParagraphSpacing" VerticalAlignment="Center" Margin="6"/>
                <hc:NumericUpDown Width="60"/>
                <hc:ButtonGroup>
                    <Button>
                        <iconPacks:PackIconMaterial Kind="UnfoldMoreHorizontal"/>
                    </Button>
                    <Button>
                        <iconPacks:PackIconMaterial Kind="UnfoldLessHorizontal"/>
                    </Button>
                    <Button>
                        <iconPacks:PackIconMaterial Kind="FormatText">
                            <iconPacks:PackIconMaterial.RenderTransform>
                                <ScaleTransform ScaleX="0.9" ScaleY="0.9" CenterX="8" CenterY="8"/>
                            </iconPacks:PackIconMaterial.RenderTransform>
                        </iconPacks:PackIconMaterial>
                    </Button>
                    <Button>
                        <iconPacks:PackIconMaterial Kind="FormatClear"/>
                    </Button>
                </hc:ButtonGroup>
            </StackPanel>
            <hc:Divider Orientation="Vertical" Margin="0,8"/>
            <StackPanel Orientation="Horizontal" Margin="8">
                <iconPacks:PackIconMaterial Kind="Text" VerticalAlignment="Center" Margin="6"/>
                <hc:NumericUpDown Width="60"/>
                <hc:ButtonGroup>
                    <Button>
                        <iconPacks:PackIconMaterial Kind="FormatIndentIncrease"/>
                    </Button>
                    <Button>
                        <iconPacks:PackIconMaterial Kind="FormatIndentDecrease"/>
                    </Button>
                    <Button>
                        <iconPacks:PackIconMaterial Kind="FormatText">
                            <iconPacks:PackIconMaterial.RenderTransform>
                                <ScaleTransform ScaleX="0.9" ScaleY="0.9" CenterX="8" CenterY="8"/>
                            </iconPacks:PackIconMaterial.RenderTransform>
                        </iconPacks:PackIconMaterial>
                    </Button>
                    <Button>
                        <iconPacks:PackIconMaterial Kind="FormatClear"/>
                    </Button>
                </hc:ButtonGroup>
            </StackPanel>
            <hc:Divider Orientation="Vertical" Margin="0,8"/>
            <StackPanel Orientation="Horizontal" Margin="8">
                <hc:ButtonGroup>
                    <Button>
                        <iconPacks:PackIconMaterial Kind="FormatAlignLeft"/>
                    </Button>
                    <Button>
                        <iconPacks:PackIconMaterial Kind="FormatAlignCenter"/>
                    </Button>
                    <Button>
                        <iconPacks:PackIconMaterial Kind="FormatAlignRight"/>
                    </Button>
                    <Button>
                        <iconPacks:PackIconMaterial Kind="FormatAlignJustify"/>
                    </Button>
                </hc:ButtonGroup>
            </StackPanel>
            <hc:Divider Orientation="Vertical" Margin="0,8"/>
            <StackPanel Orientation="Horizontal" Margin="8">
                <hc:ButtonGroup>
                    <Button>
                        <iconPacks:PackIconMaterial Kind="FormatListBulleted"/>
                    </Button>
                    <Button>
                        <iconPacks:PackIconMaterial Kind="FormatListBulletedSquare"/>
                    </Button>
                    <Button>
                        <iconPacks:PackIconMaterial Kind="FormatListBulletedTriangle"/>
                    </Button>
                    <Button>
                        <iconPacks:PackIconMaterial Kind="FormatListNumbered"/>
                    </Button>
                </hc:ButtonGroup>
            </StackPanel>
            <hc:Divider Orientation="Vertical" Margin="0,8"/>
            <StackPanel Orientation="Horizontal" Margin="8">
                <hc:ButtonGroup>
                    <Button>
                        <iconPacks:PackIconMaterial Kind="ImageOutline"/>
                    </Button>
                    <Button>
                        <iconPacks:PackIconMaterial Kind="FormatWrapInline"/>
                    </Button>
                    <Button>
                        <iconPacks:PackIconMaterial Kind="FormatWrapSquare"/>
                    </Button>
                    <Button>
                        <iconPacks:PackIconMaterial Kind="FormatWrapTight"/>
                    </Button>
                    <Button>
                        <iconPacks:PackIconMaterial Kind="FormatWrapTopBottom"/>
                    </Button>
                </hc:ButtonGroup>
            </StackPanel>
        </WrapPanel>
        <Border Grid.Row="1" Background="{DynamicResource PrimaryBrush}"/>
        <RichTextBox Grid.Row="2" Margin="8,8,8,0"/>
        <Grid Grid.Row="3">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="116"/>
                <ColumnDefinition Width="116"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="1" Content="取消" HorizontalAlignment="Stretch" Margin="8" Style="{StaticResource ButtonDashedWarning}"/>
            <Button Grid.Column="2" Content="确定" HorizontalAlignment="Stretch" Margin="8" Style="{StaticResource ButtonDashedInfo}"/>
        </Grid>
    </Grid>
</Window>
