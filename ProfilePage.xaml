<Page x:Class="MacroTalk.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:MacroTalk"
      xmlns:dd="urn:gong-wpf-dragdrop" 
      xmlns:hc="https://handyorg.github.io/handycontrol" 
      xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
      mc:Ignorable="d" 
      d:DataContext="{d:DesignInstance Type=local:ProfilePageViewModel}"
      Title="ProfilePage"
      d:Width="750" d:Height="410">
    <Grid Background="#F0F0F0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="40"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="36"/>
            <RowDefinition Height="36"/>
            <RowDefinition/>
            <RowDefinition Height="36"/>
            <RowDefinition/>
            <RowDefinition Height="36"/>
        </Grid.RowDefinitions>
        <Grid.Resources>
            <Style TargetType="{x:Type ListBox}" BasedOn="{StaticResource ListBoxBaseStyle}">
                <Setter Property="ItemTemplate">
                    <Setter.Value>
                        <DataTemplate>
                            <Grid Height="110">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="30"/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="{Binding Name}" FontSize="17" Margin="4" HorizontalAlignment="Left"/>
                                <ListBox ItemsSource="{Binding Avatars}" Grid.Row="1" Margin="0,0,0,8" IsEnabled="False">
                                    <ListBox.Style>
                                        <Style TargetType="{x:Type ListBox}" BasedOn="{StaticResource ListBoxBaseStyle}"/>
                                    </ListBox.Style>
                                    <ListBox.ItemContainerStyle>
                                        <Style TargetType="{x:Type ListBoxItem}" BasedOn="{StaticResource ListBoxItemBaseStyle}">
                                            <Style.Triggers>
                                                <Trigger Property="IsEnabled" Value="False">
                                                    <Setter Property="Opacity" Value="1"/>
                                                </Trigger>
                                            </Style.Triggers>
                                        </Style>
                                    </ListBox.ItemContainerStyle>
                                    <ListBox.ItemsPanel>
                                        <ItemsPanelTemplate>
                                            <StackPanel Orientation="Horizontal"/>
                                        </ItemsPanelTemplate>
                                    </ListBox.ItemsPanel>
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <Image Width="50" Height="50" Source="{Binding Image}"/>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </Grid>
                        </DataTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </Grid.Resources>
        <iconPacks:PackIconMaterial Kind="AccountSearch" VerticalAlignment="Center" Margin="8"/>
        <TextBox Text="{Binding SearchStr, UpdateSourceTrigger=PropertyChanged}" Grid.ColumnSpan="3" Margin="30,4,8,4"/>
        <TextBlock Grid.Row="1" Text="预制档案" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <ListBox Grid.Row="2" ItemsSource="{Binding ProfileList}" Margin="8,4,8,8" dd:DragDrop.IsDragSource="True" dd:DragDrop.IsDropTarget="True" dd:DragDrop.DropHandler="{Binding DropProfileHandler}"/>
        <iconPacks:PackIconMaterial Kind="SwapHorizontal" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Center" VerticalAlignment="Center" Width="30" Height="30"/>
        <TextBlock Grid.Row="3" Text="自定义档案" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <ListBox Grid.Row="4" ItemsSource="{Binding CustomProfileList}" Margin="8,4,8,8" dd:DragDrop.IsDragSource="True" dd:DragDrop.IsDropTarget="True" dd:DragDrop.DropHandler="{Binding DropCustomProfileHandler}"/>
        <iconPacks:PackIconMaterial Kind="SwapHorizontal" Grid.Column="1" Grid.Row="4" HorizontalAlignment="Center" VerticalAlignment="Center" Width="30" Height="30"/>
        <TextBlock Grid.Column="2" Grid.Row="1" Text="已添加档案" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <ListBox Grid.Row="2" Grid.RowSpan="3" Grid.Column="2" ItemsSource="{Binding SelectedProfileList}" Margin="8,4,8,8" dd:DragDrop.IsDragSource="True" dd:DragDrop.IsDropTarget="True" dd:DragDrop.DropHandler="{Binding DropSelectedProfileHandler}"/>
        <StackPanel Grid.Row="5" HorizontalAlignment="Left" Margin="8,0,0,0" VerticalAlignment="Top" Orientation="Horizontal">
            <Button Padding="6,0,6,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <iconPacks:PackIconMaterial Kind="AccountPlus"/>
                    <TextBlock Text="新建档案" Grid.Column="1" Margin="4,0,0,0"/>
                </Grid>
            </Button>
            <Control Width="8"/>
            <Button Padding="6,0,6,0">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="16"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <iconPacks:PackIconMaterial Kind="FolderOpen"/>
                    <TextBlock Text="导入档案" Grid.Column="1" Margin="4,0,0,0"/>
                </Grid>
            </Button>
        </StackPanel>
        <TextBlock Grid.Column="0" Grid.Row="5" Grid.ColumnSpan="3" Text="可左右拖动档案来添加/删除/排序当前使用的档案" FontSize="15.151" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,4,8,0"/>
    </Grid>
</Page>
